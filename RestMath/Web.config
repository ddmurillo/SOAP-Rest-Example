            via the attributes on the <standardEndpoint> element below--><!--
        
    
        <standardEndpoint name="" crossDomainScriptAccessEnabled="true" />
      </webScriptEndpoint>
    </standardEndpoints>-->
  </system.serviceModel>

</configuration>
